# Judo Framework - Environment Variables Example
# Copy this file to .env and fill in your actual values
# The .env file should NOT be committed to version control

# ============================================================
# JUDO FRAMEWORK RUNNER CONFIGURATION
# ============================================================

# Directorio con archivos .feature (default: "features")
JUDO_FEATURES_DIR=features

# Directorio para reportes HTML y otros outputs (default: "judo_reports")
JUDO_OUTPUT_DIR=judo_reports

# Ejecutar tests en paralelo (true/false, default: false)
JUDO_PARALLEL=false

# Número máximo de hilos para ejecución paralela (default: 4)
JUDO_MAX_WORKERS=4

# Generar archivos JSON en formato Cucumber (true/false, default: true)
JUDO_GENERATE_CUCUMBER_JSON=true

# Directorio para archivos Cucumber JSON (default: output_dir/cucumber-json)
JUDO_CUCUMBER_JSON_DIR=judo_reports/cucumber-json

# Formato de salida en consola: progress, pretty, plain, none (default: progress)
JUDO_CONSOLE_FORMAT=progress

# Guardar automáticamente requests y responses de API (true/false, default: false)
JUDO_SAVE_REQUESTS_RESPONSES=false

# Directorio para logs de requests/responses (default: output_dir/requests_responses)
JUDO_REQUESTS_RESPONSES_DIR=judo_reports/requests_responses

# Ejecutar todos los features juntos en una sola ejecución (true/false, default: true)
JUDO_RUN_ALL_FEATURES_TOGETHER=true

# Timeout en segundos para ejecución de tests (default: 300)
JUDO_TIMEOUT=300

# Número de reintentos en caso de fallo (default: 0)
JUDO_RETRY_COUNT=0

# Parar ejecución en el primer fallo (true/false, default: false)
JUDO_FAIL_FAST=false

# Salida verbose con detalles (true/false, default: true)
JUDO_VERBOSE=true

# Habilitar modo debug para el reporter (true/false, default: false)
JUDO_DEBUG_REPORTER=false

# ============================================================
# JUDO FRAMEWORK CUSTOM REPORTS CONFIGURATION
# ============================================================

# Archivo de configuración para reportes HTML personalizables (default: busca automáticamente)
# Ejemplos: report_config.json, judo_reports/report_config.json, config/reports.json
JUDO_REPORT_CONFIG_FILE=judo_reports/report_config.json

# ============================================================
# API AUTHENTICATION & CONFIGURATION
# ============================================================

# API Authentication
API_TOKEN=Bearer your_jwt_token_here
API_KEY=your_api_key_here
X_API_KEY=your_x_api_key_here

# Base URLs
BASE_URL=https://api.example.com
DEV_BASE_URL=https://dev-api.example.com
STAGING_BASE_URL=https://staging-api.example.com
PROD_BASE_URL=https://api.example.com

# OAuth / Authentication
CLIENT_ID=your_client_id
CLIENT_SECRET=your_client_secret
OAUTH_TOKEN=your_oauth_token

# Custom Headers
CUSTOM_HEADER_1=value1
CUSTOM_HEADER_2=value2

# Test Configuration (for dynamic variables)
TEST_API_URL=https://jsonplaceholder.typicode.com
TEST_USER_ID=1
TEST_POST_TITLE=Mi Post de Prueba
USER_ID=12345
ENDPOINT_SUFFIX=/v2/data

# Authentication Tokens
AUTH_TOKEN=Bearer abc123
TENANT_ID=tenant_abc

# Other Configuration
TIMEOUT=30
MAX_RETRIES=3

# Playwright Integration Configuration for Judo Framework
# Copy this file to .env and customize as needed

# ============================================================================
# BROWSER CONFIGURATION
# ============================================================================

# Enable browser testing (set to true to activate Playwright integration)
JUDO_USE_BROWSER=true

# Browser type: chromium, firefox, webkit
JUDO_BROWSER=chromium

# Headless mode: true for headless (no visible browser), false for headed (visible browser)
JUDO_HEADLESS=false

# ============================================================================
# SCREENSHOT CONFIGURATION
# ============================================================================

# Enable general screenshots
JUDO_SCREENSHOTS=true

# Take screenshot when a scenario fails
JUDO_SCREENSHOT_ON_FAILURE=true

# Take screenshot when a step fails
JUDO_SCREENSHOT_ON_STEP_FAILURE=false

# Take screenshot before each step (useful for debugging, but generates many files)
JUDO_SCREENSHOT_BEFORE_STEP=false

# Take screenshot after each step (useful for debugging, but generates many files)
JUDO_SCREENSHOT_AFTER_STEP=false

# Directory where screenshots will be saved
JUDO_SCREENSHOT_DIR=judo_screenshots

# ============================================================================
# BROWSER BEHAVIOR
# ============================================================================

# Automatically start browser for scenarios tagged with @ui, @browser, etc.
JUDO_AUTO_START_BROWSER=true

# Close browser after each scenario (true) or keep it open for performance (false)
JUDO_CLOSE_BROWSER_AFTER_SCENARIO=false

# ============================================================================
# VIEWPORT AND DISPLAY
# ============================================================================

# Browser viewport width in pixels
JUDO_VIEWPORT_WIDTH=1280

# Browser viewport height in pixels
JUDO_VIEWPORT_HEIGHT=720

# Custom user agent string (optional)
# JUDO_USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/91.0.4472.124 Safari/537.36

# ============================================================================
# BROWSER ARGUMENTS
# ============================================================================

# Additional browser arguments (comma-separated)
# Useful for CI/CD environments or specific testing needs
# JUDO_BROWSER_ARGS=--disable-web-security,--disable-features=VizDisplayCompositor,--no-sandbox

# ============================================================================
# DEBUGGING AND LOGGING
# ============================================================================

# Enable detailed step debugging
JUDO_DEBUG_STEPS=false

# Log browser console messages
JUDO_LOG_CONSOLE=false

# Log browser network requests
JUDO_LOG_BROWSER_REQUESTS=false

# Log browser network responses
JUDO_LOG_BROWSER_RESPONSES=false

# Enable debug output for the reporter system
JUDO_DEBUG_REPORTER=false

# Log saved request/response files
JUDO_LOG_SAVED_FILES=false

# ============================================================================
# OUTPUT DIRECTORIES
# ============================================================================

# Directory for general Judo output (reports, logs, etc.)
JUDO_OUTPUT_DIRECTORY=judo_reports

# Directory for request/response JSON files
# (This is separate from screenshots)
# JUDO_REQUEST_RESPONSE_DIR=judo_requests

# ============================================================================
# API TESTING CONFIGURATION (existing Judo features)
# ============================================================================

# Save API request/response data to JSON files
JUDO_SAVE_REQUESTS_RESPONSES=true

# ============================================================================
# PERFORMANCE OPTIMIZATION
# ============================================================================

# For CI/CD environments, you might want:
# JUDO_HEADLESS=true
# JUDO_SCREENSHOTS=false
# JUDO_CLOSE_BROWSER_AFTER_SCENARIO=true
# JUDO_AUTO_START_BROWSER=false

# For development/debugging, you might want:
# JUDO_HEADLESS=false
# JUDO_SCREENSHOTS=true
# JUDO_SCREENSHOT_ON_FAILURE=true
# JUDO_DEBUG_STEPS=true

# ============================================================================
# EXAMPLE CONFIGURATIONS FOR DIFFERENT ENVIRONMENTS
# ============================================================================

# Development Environment
# JUDO_USE_BROWSER=true
# JUDO_BROWSER=chromium
# JUDO_HEADLESS=false
# JUDO_SCREENSHOTS=true
# JUDO_SCREENSHOT_ON_FAILURE=true
# JUDO_DEBUG_STEPS=true

# CI/CD Environment
# JUDO_USE_BROWSER=true
# JUDO_BROWSER=chromium
# JUDO_HEADLESS=true
# JUDO_SCREENSHOTS=false
# JUDO_CLOSE_BROWSER_AFTER_SCENARIO=true
# JUDO_AUTO_START_BROWSER=false

# Testing Environment
# JUDO_USE_BROWSER=true
# JUDO_BROWSER=firefox
# JUDO_HEADLESS=false
# JUDO_SCREENSHOTS=true
# JUDO_SCREENSHOT_ON_FAILURE=true
# JUDO_VIEWPORT_WIDTH=1920
# JUDO_VIEWPORT_HEIGHT=1080

# ============================================================================
# NOTES
# ============================================================================

# 1. All boolean values should be lowercase: true/false
# 2. Browser types are case-sensitive: chromium, firefox, webkit
# 3. Paths can be relative or absolute
# 4. Environment variables override any programmatic configuration
# 5. If JUDO_USE_BROWSER=false, all browser-related settings are ignored
# 6. Screenshots are saved with timestamps and scenario names for organization
# 7. The integration is completely optional - existing API tests work unchanged
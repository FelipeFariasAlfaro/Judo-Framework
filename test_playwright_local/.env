# Environment configuration for local Playwright testing

# Enable browser testing
JUDO_USE_BROWSER=true

# Browser configuration
JUDO_BROWSER=chromium
JUDO_HEADLESS=true

# Screenshot configuration
JUDO_SCREENSHOTS=true
JUDO_SCREENSHOT_ON_FAILURE=true
JUDO_SCREENSHOT_ON_STEP_FAILURE=false

# Browser behavior
JUDO_AUTO_START_BROWSER=true
JUDO_CLOSE_BROWSER_AFTER_SCENARIO=false

# Viewport settings
JUDO_VIEWPORT_WIDTH=1280
JUDO_VIEWPORT_HEIGHT=720

# Output directories
JUDO_OUTPUT_DIRECTORY=test_reports
JUDO_SCREENSHOT_DIR=test_screenshots

# API testing (existing Judo features)
JUDO_SAVE_REQUESTS_RESPONSES=true

# Debugging (enable for troubleshooting)
JUDO_DEBUG_STEPS=false
JUDO_LOG_CONSOLE=false
JUDO_DEBUG_REPORTER=false